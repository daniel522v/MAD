<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_weight="10">

    <ImageView
        android:id="@+id/ima1"
        android:layout_width="94dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="2.99"
        android:src="@drawable/man" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="180dp"
        android:layout_height="80dp"


        android:layout_toRightOf="@+id/ima1"
        android:text="@string/tvmess1"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/ima1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text1"
        android:layout_toRightOf="@+id/ima1"
        android:layout_weight="2"
        android:text="@string/tvmess2" />

    <TextView
        android:id="@+id/divided_doubt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText3"
        android:layout_toRightOf="@+id/text1"
        android:text="TextView"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/total_doubt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/text1"
        android:text="TextView" />

    <TextView
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/text1"
        android:layout_toRightOf="@+id/text1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Divided debit"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/total_doubt"
        android:layout_toRightOf="@+id/text1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Group debit"
        android:textSize="10sp"
        android:layout_below="@+id/divided_doubt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>